
    <div id = "preferences">
            <fieldset id="formdiv">
                <legend> Preferences </legend>
                <form id = "preferenceform">
                    <div id="targetpositions">
                    <label>Target Positions</label>
                    <textarea name="positions" placeholder="e.g., Internship, Full time etc." rows="4"></textarea>
                    </div>
                    <div id = "targetlocations">
                    <label>Target Locations</label>
                    <textarea name="locations" rows="4"></textarea>
                    </div>
                    <div id = "targetroles">
                    <label >Target Roles</label>
                    <textarea name="Roles" placeholder="e.g. Software Engineer, Business Analyst etc." rows="4"></textarea>
                    </div>
                    <div id="selectexperience">
                    <label>Experience</label>
                    <select name="experience">
                        <option>Entrylevel</option>
                        <option>Experienced</option>
                        <option>Senior</option>
                    </select>
                    </div>
                </form>
            </fieldset>

            <fieldset id="targetcompanies">
                <legend>Target Companies</legend>
                <div id = "addcompanydiv">
                <input type = "text" id = "companyname" placeholder="Add a company">
                <button id="addcompany">Add</button>
                </div>
                <ul id = "companylist">
                </ul>
            </fieldset>

    </div>

